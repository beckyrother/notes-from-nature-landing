.tile
  position: relative
  max-width: 240px
  font-weight: bold
  align-self: flex-start
  font-size: 16px
  padding-bottom: 20px
  margin: 10px 44px 10px 0

  .snippet
    top: 0
    max-height: 0
    color: white
    opacity: 0
    padding: 12px
    position: absolute
    font-weight: normal
    transition: all 1.25s linear

  .snippet:hover, &:hover .snippet
    opacity: 1
    background-color: rgba(0, 0, 0, 0.7)
    color: white
    transition: all 0.75s linear

  .smaller
    font-size: 12px

  .more-info
    color: #65981d
    position: absolute
    right: 0
    z-index: 10

  .inner
    display: flex
    flex-flow: column
    text-decoration: none
    color: #65981d

  .label
    max-width: 90%

    i
      font-size: 18px

    i:hover
      color: #c3c3c3

  img
    width: 100%
    border 2px solid #65981d
