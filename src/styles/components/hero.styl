.hero
  height: 28vh

  svg.nfn-logo
    position: absolute
    height: 260px
    top: 0
    left: 8px
    fill: rgba(0, 0, 0, 0)
    stroke: lightgray

  h2, h3, h4
    position: absolute
    color: white
    text-align: left
    margin: 0 0 0 136px
    padding: 0

    &.title
      top: 168px

    &.subtitle
      top: 220px
      font-size: 20px
      text-transform: uppercase

  @media screen and (max-width: 640px)
    svg.nfn-logo
      height: 180px

    h2, h3, h4
      position: absolute
      margin: 16px 0 0 80px

      &.title
        top: 84px
        font-size: 24px

      &.subtitle
        font-size: 16px
        top: 120px
