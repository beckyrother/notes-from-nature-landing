.hero
  display: flex
  flex-direction: column
  flex-wrap: wrap
  justify-content: flex-start
  align-content: flex-start

  svg.nfn-logo
    position: absolute
    height: 200px
    top: 0
    left: 8px
    fill: rgba(0, 0, 0, 0)
    stroke: lightgray

  h2, h3, h4
    color: white
    text-align: left
    margin: 0 0 0 120px
    padding: 0

    &.title
      align-content: flex-end

    &.subtitle
      flex: 1
      align-content: flex-start
      text-transform: uppercase

  @media screen and (max-width: 440px)
    h2, h3, h4
      margin: 16px 0 0 80px

    h2
      font-size: 20px

    h3, h4
      font-size: 16px
